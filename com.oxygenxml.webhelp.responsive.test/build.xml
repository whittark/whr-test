            <param name="XHTML_FOLDER" expression="${output.dir}"/>
            <param name="OUTPUTDIR" expression="${output.dir}"/>
            <param name="BASEDIR" expression="${webhelp.responsive.dir}"/>
            <param name="OUTEXT" expression="${out.ext}" if="out.ext"/>
